<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/vikasgenie"
        android:layout_margin="20dp"/>


    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="180dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="220dp"
        android:layout_marginEnd="180dp">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/usertxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white1"
            app:passwordToggleEnabled="true"
            android:paddingBottom="5dp"
            app:passwordToggleTint="@color/white"
            android:layout_marginTop="90dp"
            app:fontFamily="@font/roboto_regular"

            >
            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User ID / Genie Investor Code"
                android:layout_marginLeft="170dp"
                android:layout_marginRight="170dp"
                android:textSize="14sp"
                android:paddingBottom="8dp"
                android:paddingTop="5dp"
                android:textCursorDrawable="@drawable/loginbg"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text"
                app:fontFamily="@font/roboto_regular"
                android:background="@drawable/boderline_bottom"
                />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/passwdtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usertxt"
            android:textColorHint="@color/white1"
            app:fontFamily="@font/roboto_regular"
            app:passwordToggleTint="@color/white"
            app:passwordToggleTintMode="src_in"
            app:passwordToggleDrawable="@drawable/eye"
            app:passwordToggleEnabled="true"
            android:padding="5dp"
            android:layout_marginTop="10dp"
         >



            <EditText
                android:id="@+id/passtxt"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="Password"
                android:layout_marginRight="170dp"
                android:layout_marginLeft="170dp"
                android:textSize="14sp"
                android:paddingBottom="8dp"
                android:textCursorDrawable="@drawable/loginbg"
                app:fontFamily="@font/roboto_regular"
                android:paddingTop="5dp"
                android:inputType="textPassword"
                android:textColor="@color/text"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/boderline_bottom"/>



        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/forgotpasstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:layout_below="@+id/passwdtxt"
            android:textColor="@color/white"
            app:fontFamily="@font/roboto_regular"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="170dp"
            android:textSize="12sp"/>
    </RelativeLayout>

        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="340dp"
            android:layout_marginRight="300dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/band"
            android:gravity="center"
            android:text="LOG IN"
            android:textColor="@color/text"
            android:textSize="20dp"
            app:fontFamily="@font/montserrat_bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="88dp"
        android:text="ENTER â–¶"
        android:textColor="@color/entergreen"
        android:layout_marginLeft="450dp"
        android:layout_marginRight="400dp"
        android:gravity="center"
        android:background="@drawable/indicator"
        android:textSize="12sp"
        app:fontFamily="@font/roboto_regular"
        android:layout_alignParentLeft="true" />
</RelativeLayout>