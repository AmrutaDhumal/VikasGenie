<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/vikasgenie"
            android:layout_margin="20dp"/>


        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg2"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="180dp"
            android:layout_marginBottom="100dp"
            android:layout_marginStart="220dp"
            android:layout_marginEnd="180dp"
            android:visibility="visible"
          >


            <TextView
                android:id="@+id/findtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Find Your Email"
                app:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/entertxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/findtxt"
                android:layout_marginTop="40dp"
                android:gravity="center"
                app:fontFamily="@font/roboto_regular"
                android:text="Enter your Phone number or Recovery Email"
                android:textColor="@color/white1"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"
              />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/usertxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entertxt"
                android:layout_marginTop="40dp"
                android:paddingBottom="5dp"
                android:textColorHint="@color/white1"
                app:fontFamily="@font/roboto_regular"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/white"
                android:layout_alignParentLeft="true"
               >

                <EditText
                    android:id="@+id/input_mail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:background="@drawable/boderline_bottom"
                    android:hint="Phone Number or Email"
                    android:paddingBottom="8dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/text"
                    android:textCursorDrawable="@drawable/loginbg"
                    android:textSize="14sp"
                    app:fontFamily="@font/roboto_regular"
                    android:inputType="text" />


            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg2"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="180dp"
            android:layout_marginBottom="100dp"
            android:layout_marginStart="220dp"
            android:layout_marginEnd="180dp"
            android:visibility="invisible">
            <TextView
                android:id="@+id/gettxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:text="Get Your Verification Code"
                app:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                />

            <ImageView
                android:id="@+id/img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/gettxt"
                android:src="@drawable/img"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/otptxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/img"
                android:layout_marginTop="30dp"
                android:gravity="center"
                app:fontFamily="@font/roboto_regular"
                android:text="OTP will be sent on the associated mobile number with email-id."
                android:textColor="@color/white1"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/emailtxt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="dsfgd@fgfh.com"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:fontFamily="@font/montserrat_bold"
               android:layout_below="@+id/otptxt"
                android:gravity="center"

                />


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg2"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="180dp"
            android:layout_marginBottom="100dp"
            android:layout_marginStart="220dp"
            android:layout_marginEnd="180dp"
            android:visibility="invisible">
            <TextView
                android:id="@+id/notxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="70dp"
                android:gravity="center"
                android:text="No Account Found"
                app:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"
                />


            <TextView
                android:id="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/notxt"
                android:layout_marginTop="70dp"
                android:gravity="center"
                app:fontFamily="@font/roboto_regular"
                android:text="There's no Google Account with the info you provided."
                android:textColor="@color/white1"
                android:textSize="15sp"
                android:layout_alignParentLeft="true"
                />
        </RelativeLayout>
        <TextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="340dp"
            android:layout_marginRight="300dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/band"
            android:gravity="center"
            android:text="FORGOT PASSWORD"
            android:textColor="@color/text"
            android:textSize="20dp"
            app:fontFamily="@font/montserrat_bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/nexttxt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="88dp"
        android:text="NEXT ▶"
        android:textColor="@color/entergreen"
        android:layout_marginLeft="450dp"
        android:layout_marginRight="400dp"
        android:gravity="center"
        android:background="@drawable/indicator"
        android:textSize="12sp"
        app:fontFamily="@font/roboto_regular"
        android:layout_alignParentLeft="true"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/sendtxt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="88dp"
        android:text="SEND ▶"
        android:textColor="@color/entergreen"
        android:layout_marginLeft="450dp"
        android:layout_marginRight="400dp"
        android:gravity="center"
        android:background="@drawable/indicator"
        android:textSize="12sp"
        app:fontFamily="@font/roboto_regular"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/trytxt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="88dp"
        android:text="Try Again"
        android:textColor="@color/entergreen"
        android:layout_marginLeft="450dp"
        android:layout_marginRight="400dp"
        android:gravity="center"
        android:background="@drawable/indicator"
        android:textSize="12sp"
        app:fontFamily="@font/roboto_regular"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"/>
</RelativeLayout>